<?xml version="1.0" encoding="UTF-8" ?>
<config>
	<libs>
		<Pifa>
			<plugin>Standart</plugin>
			<deploy>
				<type>svn</type>
				<tag>trunk</tag>
				<src>https://github.com/bojik/PiFa.git/${config.libs.Pifa.deploy.tag}</src>
				<dst>${config.paths.libs}/pifa/${config.libs.Pifa.deploy.tag}</dst>
				<current>${config.paths.libs}/pifa/current</current>
			</deploy>
			<configure>
				<depends>
					<item>PHPUnit</item>					
					<item>Miao</item>
					<item>Miaox</item>
                    <item>ZendFramework</item>
				</depends>
				<files>
					<item>
						<src>${config.paths.build}/templates/etc/vhost.conf.tpl</src>
						<dst>${config.paths.etc}/pifa.conf</dst>
						<mode>0444</mode>
					</item>
					<item>
						<src>${config.libs.Pifa.deploy.dst}/build/templates/scripts/bootstrap.php.tpl</src>
						<dst>${config.libs.Pifa.deploy.dst}/scripts/bootstrap.php</dst>
						<mode>0555</mode>
					</item>
					<item>
						<src>${config.libs.Pifa.deploy.dst}/build/templates/scripts/test.php.tpl</src>
						<dst>${config.libs.Pifa.deploy.dst}/scripts/test.php</dst>
						<mode>0555</mode>
					</item>
					<item>
						<src>${config.paths.build}/templates/scripts/test.sh.tpl</src>
						<dst>${config.paths.scripts}/test.sh</dst>
						<mode>0555</mode>
					</item>
                    <item>
                        <src>${config.libs.Pifa.deploy.dst}/build/templates/public/.htaccess.tpl</src>
                        <dst>${config.libs.Pifa.deploy.dst}/modules/FrontOffice/public/.htaccess</dst>
                        <mode>0444</mode>
                    </item>
                    <item>
                        <src>${config.libs.Pifa.deploy.dst}/build/templates/public/nginx.conf.tpl</src>
                        <dst>${config.libs.Pifa.deploy.dst}/etc/nginx.conf</dst>
                        <mode>0444</mode>
                    </item>
                    </files>
				<dirs>
					<item>
						<dir>${config.libs.Pifa.deploy.dst}/data</dir>
					</item>
                    <item>
                        <dir>${config.libs.Pifa.deploy.dst}/etc</dir>
                    </item>
                    <item>
                        <dir>${config.paths.root}/releases</dir>
                    </item>
                </dirs>
			</configure>
			<link>
				<item>
					<src>${config.libs.Pifa.deploy.dst}/modules/FrontOffice/public</src>
					<dst>${config.paths.root}/public</dst>
				</item>
                <item>
                    <src>${config.libs.Pifa.deploy.dst}/modules/FrontOffice/public</src>
                    <dst>${config.paths.root}/htdocs</dst>
                </item>
                <item>
                    <src>${config.libs.Pifa.deploy.dst}</src>
                    <dst>${config.paths.nginx_conf}</dst>
                </item>
                <item>
                    <src>${config.libs.Pifa.deploy.dst}/etc/nginx.conf</src>
                    <dst>${config.paths.nginx_conf}/nginx.conf</dst>
                </item>
            </link>
			<modules>
				<FrontOffice>
					<DataHelper>
						<Url>
							<host>${config.hosts.public}</host>
							<pics>${config.hosts.public}/static</pics>
						</Url>
						<JsCssList>
							<minify>1</minify>
						</JsCssList>
					</DataHelper>
                    <Router>
                        <route url="/" view="Main" />
                        <route url="/sql" action="Json_Sql" />
                        <route url="/urls/json" action="Json_Urls" />
                        <route url="/domain/(.+)" view="Domain" />
                        <route url="/server/(.+)" view="Server" />
                        <route url="/urls" view="Urls" />
                    </Router>
                </FrontOffice>
                <Db>
                    <host>localhost</host>
                    <dbname></dbname>
                    <username></username>
                    <password></password>
                </Db>
            </modules>
		</Pifa>
	</libs>
</config>
